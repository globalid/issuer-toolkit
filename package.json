{
  "name": "@globalid/issuer-toolkit",
  "version": "0.1.0",
  "description": "Library for credential issuers integrated with GlobaliD",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run genver && npm run compile && npm run lint && npm run format:check",
    "clean": "rimraf dist",
    "compile": "tsc --project tsconfig.build.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "genver": "genversion src/version.ts --es6 --semi",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "postversion": "npm run genver",
    "prepublishOnly": "npm run compile",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/globalid/credentials-issuer/issuer-toolkit.git"
  },
  "keywords": [
    "credential",
    "decentralized",
    "identity",
    "issuer",
    "self-sovereign",
    "SSI",
    "verifiable"
  ],
  "author": "GlobaliD",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/globalid/credentials-issuer/issuer-toolkit/issues"
  },
  "homepage": "https://gitlab.com/globalid/credentials-issuer/issuer-toolkit#readme",
  "devDependencies": {
    "@golevelup/ts-jest": "0.3.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.3",
    "genversion": "^3.0.2",
    "jest": "^27.3.1",
    "nock": "^13.2.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/lodash": "^4.14.182",
    "axios": "^0.24.0",
    "dayjs": "^1.10.7",
    "form-data": "^4.0.0",
    "globalid-crypto-library": "^5.0.1",
    "joi": "^17.5.0"
  }
}

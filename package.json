{
  "name": "@globalid/issuer-toolkit",
  "version": "0.5.0",
  "description": "Library for credential issuers integrated with GlobaliD",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run genver && npm run compile && npm run lint && npm run format:check",
    "clean": "rimraf dist",
    "compile": "tsc --project tsconfig.build.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "genver": "genversion src/version.ts --es6 --semi",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "postversion": "npm run genver",
    "prepublishOnly": "npm run compile",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/globalid/issuer-toolkit.git"
  },
  "keywords": [
    "credential",
    "decentralized",
    "identity",
    "issuer",
    "self-sovereign",
    "SSI",
    "verifiable"
  ],
  "author": "GlobaliD",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/globalid/issuer-toolkit/issues"
  },
  "homepage": "https://github.com/globalid/issuer-toolkit#readme",
  "devDependencies": {
    "@golevelup/ts-jest": "0.3.5",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.12",
    "@types/sinon": "^10.0.14",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "genversion": "^3.1.1",
    "jest": "^29.5.0",
    "nock": "^13.3.0",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "sinon": "^15.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.3.6",
    "dayjs": "^1.11.7",
    "form-data": "^4.0.0",
    "globalid-crypto-library": "^5.2.1",
    "joi": "^17.9.1"
  }
}
